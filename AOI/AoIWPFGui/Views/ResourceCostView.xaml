<reactiveui:ReactiveUserControl x:Class="AoIWPFGui.Views.ResourceCostView"
             x:TypeArguments="vm:ResourceCostViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:reactiveui="http://reactiveui.net"
             xmlns:vm="clr-namespace:AoIWPFGui.ViewModels"
             xmlns:local="clr-namespace:AoIWPFGui.Views"
             mc:Ignorable="d">
	<Grid>
		<Rectangle Margin="6" x:Name="BackgroundRect" Fill="LightGray" Opacity="0.92" RadiusX="6" RadiusY="6" />
		<TextBlock FontSize="18" Margin="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Run Text="Cost:"/> <Run x:Name="CoinsRun"/> <Run x:Name="ToolsRun"/>
		</TextBlock>
	</Grid>
</reactiveui:ReactiveUserControl>
